{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "lib": [
      "dom",
      "es2017",
      "esnext"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "",
    "paths": {
      "@toolbarthomas/enlightenment": [
        "node_modules/@toolbarthomas/enlightenment"
      ],
      "@toolbarthomas/enlightenment/*": [
        "node_modules/@toolbarthomas/enlightenment/*"
      ]
    },
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "rootDir": "./src",
    "strict": true,
    "types": [],
    "typeRoots": [
      "src/_types/",
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}