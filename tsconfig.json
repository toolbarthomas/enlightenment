{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "lib": [
      "dom",
      "es2017",
      "esnext"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./types",
    "paths": {
      "@toolbarthomas/enlightment": [
        "node_modules/@toolbarthomas/enlightment"
      ],
      "@toolbarthomas/enlightment/*": [
        "node_modules/@toolbarthomas/enlightment/*"
      ]
    },
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "rootDir": "./src",
    "strict": true,
    "types": [],
    "typeRoots": [],
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": []
}