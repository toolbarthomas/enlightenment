{
  "name": "@toolbarthomas/enlightenment",
  "version": "0.2.0",
  "description": "Web component workflow with Sass & Lit Element",
  "main": "dist/enlightenment.js",
  "type": "module",
  "files": [
    ".browserlistrc",
    "dist/Enlightenment.cjs",
    "dist/Enlightenment.js",
    "dist/Enlightenment.min.cjs",
    "dist/Enlightenment.min.js",
    "index.cjs",
    "index.mjs",
    "index.ts",
    "LICENSE.md",
    "node/",
    "README.md",
    "src/enlightenment.ts",
    "src/mixins/"
  ],
  "scripts": {
    "prebuild": "npm run tsc",
    "build": "node node/esbuild.enlightenment.mjs -r=src/enlightenment -s & node node/esbuild.enlightenment.mjs -r=src/enlightenment -s -f=cjs",
    "build:minify": "node node/esbuild.enlightenment.mjs -r=src/enlightenment -s -m & node node/esbuild.enlightenment.mjs -r=src/enlightenment -s -f=cjs -m",
    "dev": "node node/esbuild.enlightenment.mjs -r=src/enlightenment -s -w & node node/esbuild.serve.mjs",
    "prepublish": "npm run build && npm run build:minify",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toolbarthomas/enlightenment.git"
  },
  "keywords": [
    "esbuild",
    "lit",
    "sass",
    "typescript",
    "webcomponents"
  ],
  "author": "Thomas van der velde <contact@toolbarthomas.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toolbarthomas/enlightenment/issues"
  },
  "homepage": "https://github.com/toolbarthomas/enlightenment#readme",
  "dependencies": {
    "focus-trap": "^7.5.2",
    "glob": "^10.3.3",
    "lit": "^2.7.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "esbuild": "^0.18.17",
    "postcss": "^8.4.27",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "sass": "^1.64.1",
    "typescript": "^5.1.6"
  }
}
